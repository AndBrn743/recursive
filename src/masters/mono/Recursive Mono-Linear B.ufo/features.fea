feature calt {
    lookup equal_equal_equal {
        ignore sub equal equal' equal equal;
        ignore sub equal' equal equal equal;
        sub LIG LIG equal' by equal_equal_equal.liga;
        sub LIG  equal' equal  by LIG;
        sub equal'   equal  equal  by LIG;
    } equal_equal_equal;
} calt;